@page "/region"

@inject IRegionService _regionService

<h3>Regions</h3>
<a href="/region/create" class="btn btn-primary">Create a Region</a>
<hr />

@if (Regions.Count() > 0)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Type</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var region in Regions)
			{
				<tr>
					<td>@region.Id</td>
					<td>@region.Name</td>
					<td>
						<a href="/region/edit/@region.Id" class="btn btn-success">Edit</a>
						<a href="/region/detail/@region.Id" class="btn btn-warning">Details</a>
						<a href="/region/delete/@region.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p class="text-danger">Sorry, there are no avilable Regions at this time.</p>
}
@code {

	public List<RegionListItem> Regions = new();

	protected override async Task OnInitializedAsync()
	{
		Regions = await _regionService.GetRegions();
	}

}
